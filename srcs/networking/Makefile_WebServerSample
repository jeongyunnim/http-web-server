# 폴더 안에 Makefile이 여러개일 경우 사용법
# make -f Makefile_WebServerSample [command]

ifeq "$(findstring debug, $(MAKECMDGOALS))" "debug"
	DFLAGS = -g3 -fsanitize=address
else
	ARG.DEBUG = 0
	DFLAGS =
endif

CXX 		=	c++

CXXFLAGS	=	-Wall -Wextra -Werror -std=c++98 $(INCS)

NAME 		= ./WebServerSample.out

SRCS_DIR := $(shell dirname $(PWD))

INCS = \
	-I$(SRCS_DIR)/util \
	-I$(SRCS_DIR)/networking \

SRCS = \
	$(SRCS_DIR)/networking/main_WebServerSample.cpp \
	$(SRCS_DIR)/networking/WebServer.cpp \
	$(SRCS_DIR)/util/Colors.cpp \
	$(SRCS_DIR)/util/MultiTree.cpp \
	$(SRCS_DIR)/util/MultiTreeNode.cpp \

OBJS		=	$(SRCS:%.cpp=%.o)

RM			=	rm -f

all:	$(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $@

%o:	%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean: 
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re